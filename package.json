{
  "name": "nodejs-backend-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate code for NodeJs backend written in Typescript with Express and MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run style-check",
    "build": "tsc --project ./tsconfig.json",
    "prestyle-check": "npm run lint",
    "style-check": "prettier --check .",
    "style-fix": "prettier --write .",
    "lint": "eslint src/**/*.ts",
    "start": "node ./dist/index.js",
    "dev": "ts-node src/index.ts"
  },
  "keywords": [
    "express",
    "nodejs",
    "mongodb",
    "boilerplate",
    "typescript"
  ],
  "repository": {
    "url": "git@github.com:riturajborpujari/nodejs-backend-boilerplate.git"
  },
  "author": {
    "name": "Rituraj Borpujari",
    "url": "https://github.com/riturajborpujari"
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "ramda": "^0.29.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/ramda": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
